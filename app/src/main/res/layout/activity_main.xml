<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<androidx.core.widget.NestedScrollView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <androidx.constraintlayout.widget.Constraints
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/image_logo"
        android:src="@drawable/guni_pink_logo"
        android:layout_contraintTop_toTopof="parent"
        android:layout_contraintStart_toStartof="parent"
        android:layout_contraintEnd_toEndof="parent"
        />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="20dp"
            android:id="@+id/cardview"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="15dp"
            android:layout_contraintTop_toBottomof="@id/image_logo">
            <androidx.constraintlayout.widget.Constraints
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="20dp">
                <EditText
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:id="@+id/email"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:layout_contraintTop_toTopof="parent"
                    android:layout_contraintEnd_toEndof="parent"
                    android:layout_contraintStart_toEndof="**"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/password_toggle"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:layout_contraintEnd_toEndof="parent"
                    android:layout_contraintStart_toEndof="parent"
                    android:layout_contraintTop_toBottumof="@id/edittextemail"/>
        <TextView
                    android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/email_id"
            android:layout_contraintStart_toStartof="parent"
            android:layout_contraintEnd_toStartof="@id/edittextemail"

                />

          </androidx.constraintlayout.widget.Constraints>

</RelativeLayout>